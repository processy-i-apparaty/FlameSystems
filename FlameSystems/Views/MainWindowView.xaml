<Window x:Class="FlameSystems.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlameSystems.Views"
        xmlns:viewModels="clr-namespace:FlameSystems.ViewModels"
        mc:Ignorable="d"
        Title="MainWindowView" Height="450" Width="800" Background="{StaticResource BrushBackground}">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding WindowContent}"></ContentControl>
    </Grid>
</Window>
