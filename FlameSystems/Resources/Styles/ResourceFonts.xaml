<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="FontBrassMono" TargetType="TextBlock">
        <Setter Property="TextElement.FontFamily" Value="/Resources/Fonts/#Brass Mono" />
        <Setter Property="TextElement.Foreground" Value="{StaticResource BrushForeground}" />
    </Style>

    <Style x:Key="FontBrassMonoText" TargetType="TextBlock">
        <Setter Property="TextElement.FontFamily" Value="/Resources/Fonts/#Brass Mono" />
        <Setter Property="TextElement.Foreground" Value="{StaticResource BrushBorder}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="FontBrassMonoComfortable" TargetType="TextBlock">
        <Setter Property="TextElement.FontFamily" Value="/Resources/Fonts/#Brass Mono Comfortable" />
        <Setter Property="TextElement.Foreground" Value="{StaticResource BrushForeground}" />
    </Style>

    <Style x:Key="FontBrassMonoCozy" TargetType="TextBlock">
        <Setter Property="TextElement.FontFamily" Value="/Resources/Fonts/#Brass Mono Cozy" />
        <Setter Property="TextElement.Foreground" Value="{StaticResource BrushForeground}" />
    </Style>

    <FontFamily x:Key="FamilyBrassMono">/Resources/Fonts/#Brass Mono</FontFamily>

</ResourceDictionary>